{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd SISTEMAS/portal-toit/backend && npm ci && npm run build"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "startCommand": "cd SISTEMAS/portal-toit/backend && npm start"
  },
  "environments": {
    "development": {
      "variables": {
        "NODE_ENV": "development",
        "PORT": "3001",
        "FRONTEND_URL": "https://${{RAILWAY_STATIC_URL}}",
        "JWT_SECRET": "${{JWT_SECRET}}",
        "JWT_REFRESH_SECRET": "${{JWT_REFRESH_SECRET}}",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "REDIS_URL": "${{REDIS_URL}}",
        "DEFAULT_TENANT": "blueworld",
        "ENABLE_LOGGING": "true",
        "LOG_LEVEL": "debug"
      }
    },
    "test": {
      "variables": {
        "NODE_ENV": "test",
        "PORT": "3001",
        "FRONTEND_URL": "https://${{RAILWAY_STATIC_URL}}",
        "JWT_SECRET": "${{JWT_SECRET}}",
        "JWT_REFRESH_SECRET": "${{JWT_REFRESH_SECRET}}",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "REDIS_URL": "${{REDIS_URL}}",
        "DEFAULT_TENANT": "blueworld",
        "ENABLE_LOGGING": "true",
        "LOG_LEVEL": "info"
      }
    },
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3001",
        "FRONTEND_URL": "https://portal.toit.com",
        "JWT_SECRET": "${{JWT_SECRET}}",
        "JWT_REFRESH_SECRET": "${{JWT_REFRESH_SECRET}}",
        "DATABASE_URL": "${{DATABASE_URL}}",
        "REDIS_URL": "${{REDIS_URL}}",
        "DEFAULT_TENANT": "blueworld",
        "ENABLE_LOGGING": "false",
        "LOG_LEVEL": "error",
        "FORCE_HTTPS": "true",
        "SECURE_COOKIES": "true"
      }
    }
  }
}