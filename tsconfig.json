{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@toit/ui-components": ["./packages/ui-components/src"],
      "@toit/design-system": ["./packages/design-system/src"],
      "@toit/auth-lib": ["./packages/auth-lib/src"],
      "@toit/utils": ["./packages/utils/src"]
    }
  },
  "include": [
    "apps/**/*",
    "packages/**/*",
    "services/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ],
  "references": [
    { "path": "./apps/portal" },
    { "path": "./apps/trad-ia" },
    { "path": "./packages/ui-components" },
    { "path": "./packages/design-system" },
    { "path": "./packages/auth-lib" },
    { "path": "./packages/utils" }
  ]
}